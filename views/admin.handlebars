<h1>Waiter Schedule</h1>

<form action="/days" method="POST">

  <body>
    <table>

      {{#each days}}
        <tr>
          <th>{{@key}}</th>
          {{#each this}}
            <td class="{{applyClassName ../this}}">{{users}}</td>
          {{/each}}
        </tr>
      {{/each}}

    </table>

    <button type="submit" formaction="/reset"
                  onclick="return confirm('Are you sure you want to clear schedule?')">Reset</button>
  </body>
</form>