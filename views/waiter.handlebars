<script>
    setTimeout(function () {
        document.querySelector(".success").remove();
    }, 3000)
</script>
<h1>Waiter App</h1>

<h1>Welcome, {{username}}!</h1>

<p class="success">{{successMsg}}</p>

<form action="/waiters/{{username}}" method="POST">

{{#each scheduleDays}}
    <label for="{{id}}">{{days}}</label>
    <input id="{{id}}" type="checkbox" name="checkday" class="check" value="{{id}}" {{#if checked}} checked {{else}} unchecked {{/if}} >
{{/each}}

    <button type="submit">Update</button>

</form>

</body>

</html>